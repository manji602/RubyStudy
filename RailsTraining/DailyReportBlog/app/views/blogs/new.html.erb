<% provide(:title, t('create_blog')) %>
<h1><%= t('create_blog')%></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@blog) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <div class="form-group">
        <%= f.label :title, class: "control-label"  %>
        <%= f.text_field :title, class: "form-control", placeholder: t('placeholder.blog_title')  %>
      </div>

      <div class="form-group">
        <%= f.label :description, class: "control-label" %>
        <%= f.text_area :description, class: "form-control", rows: 10, placeholder: t('placeholder.blog_description') %>
      </div>

      <%= f.submit t('create_blog'), class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
