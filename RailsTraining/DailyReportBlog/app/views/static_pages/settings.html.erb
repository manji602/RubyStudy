<div class="row">
  <%= render 'shared/user_thumbnail', user: current_user %>
  <div class="col-md-9">
    <h3 class="page-header"><%= t('settings') %></h3>
    <h4><%= t('account_settings') %></h4>
    <div class="btn-group">
      <%= link_to t('edit_account'), edit_user_path(current_user), class: "btn btn-primary", role: "button" %>
      <!-- <%= link_to t('delete_account'), home_path, class: "btn btn-danger", role: "button" %> -->
    </div>

    <% if has_blog? %>
      <h4><%= t('blog_settings') %></h4>
      <div class="btn-group">
        <%= link_to t('edit_blog'), edit_blog_path(current_blog), class: "btn btn-primary", role: "button" %>
        <%= link_to t('delete_blog'), blog_path(current_blog), class: "btn btn-danger", role: "button", method: :delete, data: { confirm: t('confirm_delete') } %>
      </div>
    <% end %>
  </div>
</div>
