<div class="row">
  <div class="col-md-3 col-md-offset-9">
    <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#createEntryModal"><%= t('create_entry') %></button>
  </div>
</div>
<!-- Modal -->

<div class="modal fade" id="createEntryModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel"><%= t('create_entry') %></h4>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-md-12">
            <%= form_for(build_entry) do |f| %>
              <%= render 'shared/error_messages', object: f.object %>

              <div class="form-group">
                <%= f.label :title, class: "control-label" %>
                <%= f.text_field :title, class: "form-control", placeholder: t('placeholder.entry_title') %>
              </div>

              <div class="form-group">
                <%= f.label :body, class: "control-label" %>
                <%= f.text_area :body, class: "form-control", rows: 20, placeholder: t('placeholder.entry_body') %>
              </div>

              <input type="hidden" name="entry[user_id]" value=<%= current_user.id %>>
              <input type="hidden" name="entry[blog_id]" value=<%= current_user.blog.id %>>
              <%= f.submit t('submit'), class: "btn btn-large btn-primary" %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal"><%= t('close') %></button>
      </div>
    </div>
  </div>
</div>
