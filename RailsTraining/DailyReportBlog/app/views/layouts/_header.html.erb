<header>
  <nav class="navbar navbar-fixed-top navbar-inverse">
    <div class="container-fluid">
      <%= link_to current_blog_title, root_path, id: "logo" %>

      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to t('home'), root_path %></li>
          <% if signed_in? %>
          <li><%= link_to t('users'), users_path %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><%= t('menu') %><span class="caret"></span></a>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to t('profile'), current_user %></li>
                <li><%= link_to t('settings'), settings_path %></li>
                <li class="divider"></li>
                <li><%= link_to t('sign_out'), signout_path, method: "delete" %></li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to t('sign_in'), signin_path %></li>
          <% end %>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>
</header>
